<% if logged_in? %>
	<ul>
 	<li><strong>Logged in as <%= current_user.login %></strong></li> 
	<li><%= link_to "Dashboard", root_url %></li>
	<li><%= link_to "My Account", profile_url(current_user) %></li>
	<% if admin? -%><li><%= link_to "Administration", admin_root_url %></li><% end -%>
	<li><%= link_to "Log out", logout_url, :method => :delete %></li>
	</ul>
<% else %>
  <div>
    <ul>
		<li class='arrow'><a href="#signup" class="flip">Sign Up</li>
	</ul>	
	<ul>
		<li class='arrow'><a href="#login" class="flip">Login</a></li>
	</ul>
  </div>
<% end %>
