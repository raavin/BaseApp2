<h2>Account details</h2>
<ul>
	<li><%= h(@user.login) %></li>
	

	
	<% change_email_text = @user.not_using_openid? ? " <small>#{link_to "test", edit_email_user_path(@user)}</small>" : "" %>
	
	<li><%= h(@user.email) %>
	<%= change_email_text %></li>

	<li><small><%=link_to "change", edit_password_user_path(@user)%></small></li>

	

	
	<li><%= @user.created_at.to_s(:long) %></li>
	<li><%= @user.updated_at.to_s(:long) %></li>

	</ul>